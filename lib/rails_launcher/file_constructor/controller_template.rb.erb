class <%= controller_name.classify %> < ApplicationController
<% if index? %>
  def index
    @<%= plural %> = <%= model %>.all
  end

<% end %>
<% if show? %>
  def show
    <%= find %>
  end

<% end %>
<% if new? %>
  def new
    @<%= singular %> = <%= model %>.new
  end

<% end %>
<% if edit? %>
  def edit
    <%= find %>
  end

<% end %>
<% if create? %>
  def create
    @<%= singular %> = <%= model %>.create(params[:<%= singular %>])

    if @<%= singular %>.save
      redirect_to @<%= singular %>, notice: '<%= human_name %> was successfully created.'
    else
      render action: "new"
    end
  end

<% end %>
<% if update? %>
  def update
    <%= find %>
    @<%= singular %> = <%= model %>.find(params[:id])

    if @<%= singular %>.update_attributes(params[:<%= singular %>])
      redirect_to @<%= singular %>, notice: '<%= human_name %> was successfully updated.'
    else
      render action: "edit"
    end
  end

<% end %>
<% if destroy? %>
  def destroy
    <%= find %>
    @<%= singular %>.destroy

    redirect_to <%= index_helper %>_url
  end
<% end %>
end
